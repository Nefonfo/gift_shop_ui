extends ../templates/master.pug
include ../components/generic_hero.pug
block title
    title Bienvenido
    
block content
    +generic_hero('Enter new password', './assets/img/password_reset.webp')
    .w-full.flex.justify-center.items-center.py-6
        form.w-full.card.bg-base-100.shadow-xl(class="md:w-1/2 lg:w-2/5")
            .card-body
                h2.card-text Please enter your new password twice so we can verify you typed it in correctly.
                .py-4
                    .alert.alert-error.shadow-lg.my-2
                        div
                            i.fa-solid.fa-circle-xmark
                            span Error! Task failed successfully.

                    .form-control
                        label.label
                            span.label-text New Password
                            span.font-bold.text-error.text-xs This field its required
                        label.input-group
                            span Password
                            input.input.input-bordered.w-full(type='password')
                    .form-control
                        label.label
                            span.label-text Confirm Password
                        label.input-group
                            span Password
                            input.input.input-bordered.w-full(type='password')
                .card-actions.justify-end
                    button.btn.btn-primary Change Password