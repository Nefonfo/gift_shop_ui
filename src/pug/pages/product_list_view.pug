extends ../templates/master.pug

block title
    title Productos
    
block content
    .hero.h-80(style='background-image: url(https://api.lorem.space/image/fashion?w=1000&h=800);')
        .hero-overlay.bg-opacity-60
        .hero-content.text-center.text-neutral-content
            .max-w-md
                h1.mb-5.text-5xl.font-bold Productos 

    form.navbar.bg-primary-content.flex.flex-wrap.flex-row.items-center.justify-between.gap-4.py-2(class="md:px-6 md:py-4")
        .dropdown
            a.flex.btn.btn-ghost.label.px-4(class="md:btn-lg md:gap-2 md:px-auto" tabindex='0')
                i.fa-solid.fa-filter
                span.hidden(class="md:block") Filtrar
            .dropdown-content.card.card-compact.w-80.p-2.shadow.bg-primary.text-primary-content(class="md:w-96" tabindex='0')
                .card-body
                    h1.card-title Filtros
                    h4.font-bold.text-lg.primary-content Precio
                    .flex.gap-2.flex-wrap.flex-row
                        .flex.flex-wrap.grow
                            input.range(type='range' min='0' max='10000' value='10000' step='1000' data-range-move="#price-move-range" data-range-move-value="3444")
                            .w-full.flex.justify-between.text-xs.px-2
                                span |
                                span |
                                span |
                                span |
                                span |
                                span |
                                span |
                                span |
                                span |
                                span |
                        .flex.flex-wrap.font-bold.text-base.text-base-300(class="w-3/12")
                            | $
                            span.ml-1#price-move-range
                    h4.font-bold.text-lg.primary-content Categoría
                    select.select.select-ghost.w-full.max-w-xs
                        option Han Solo
                        option Greedo

        .form-control.flex.grow
            .input-group
                button.btn.btn-square(class="md:btn-lg")
                    svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z')
                input.w-full.input.input-bordered(class="md:input-lg" type='text' placeholder='¿Qué Producto Necesitas Hoy?')


    .w-full.flex.flex-wrap.items-center.justify-center.py-8.gap-y-6.bg-primary-content(class="md:py-10 md:gap-y-16 md:gap-x-8")
        each _ in Array(6)
            include ../components/card.pug
    .w-full.flex.flex-wrap.justify-center.items-center.bg-primary-content.py-8
        .btn-group.grid.grid-cols-2
            button.btn.btn-outline Previous page
            button.btn.btn-outline Next
